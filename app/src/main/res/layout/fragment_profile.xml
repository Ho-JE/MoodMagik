<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profile"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="10dp"
            android:elevation="10dp"
            app:cardCornerRadius="12dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="12dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/person" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"
                        android:fontFamily="@font/mulish_extrabold"
                        android:text="Hi John."
                        android:textColor="@color/black"
                        android:textSize="28sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/mulish"
                        android:text="Good Morning"
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:fontFamily="@font/mulish"
                            android:gravity="center_vertical"
                            android:text="Tasks Completed:"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <ProgressBar
                            android:id="@+id/determinateBar"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20sp"
                            android:progress="25"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="15sp"
            android:layout_marginBottom="5sp"
            android:fontFamily="@font/mulish"
            android:text="Speech Recorded:"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="10dp"
            android:elevation="10dp"
            app:cardCornerRadius="12dp"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/activity_speech_record_list_view" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:layout_marginHorizontal="30dp"
            android:elevation="10dp"
            app:cardCornerRadius="12dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/taskListWithCompleted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:tabGravity="fill"
                    app:tabIndicatorGravity="stretch"
                    app:tabMode="fixed"
                    app:tabSelectedTextColor="@android:color/white"
                    app:tabIndicatorAnimationMode="elastic"
                    app:tabIndicator="@drawable/tab_indicator"
                    app:tabIndicatorColor="#202635"
                    android:paddingLeft="3sp">

                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/taskListTab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Task List"
                        />
                    <com.google.android.material.tabs.TabItem
                        android:id="@+id/completedListTab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Completed" />

                </com.google.android.material.tabs.TabLayout>

            </FrameLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/fragmentArea"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5sp"
            android:layout_marginHorizontal="30dp"
            android:elevation="10dp"
            app:cardCornerRadius="12dp">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/TasksViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/taskListWithCompleted"
                android:background="@android:color/white" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tooltipText="New task"
                android:id="@+id/newTaskButton"
                android:layout_gravity="bottom|end"
                android:backgroundTint="#A883C5"
                android:padding="5dp"
                android:layout_margin="20dp"
                android:src="@drawable/addtask"
                />

        </androidx.cardview.widget.CardView>
    </ScrollView>
</LinearLayout>